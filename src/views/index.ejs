<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblo</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="/logo/favicon.ico" />
    <link href="/css/all.css" rel="stylesheet">
    <script src="/scripts/IndexScript.js" defer></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
</head>
<body class="bg-biblogreen-100 font-roboto">
    <div class="relative">
      <div class="sticky top-0">
        <%- include('./partials/header') %>
      </div>
      <div class="md:hidden">
        <img class="" src="/banner/book-banner.jpg" alt="">
      </div>
      <div class="hidden md:block">
        <img class="" src="/banner/book-banner-lg.jpg" alt="">
      </div>
    </div>
    <div class="mt-10">
      <% genres.forEach((genre, index) => { %>
        <div class="lg:max-w-screen-xl lg:mx-auto px-5 mb-2">
          <a href="<%= "/" + genre.id %>" class="mb-4 text-gray-800 text-lg font-semibold tracking-wide px-3"><%= genre.name.toUpperCase() %> </a>
        </div>
        <div class="swiper-container bg-white font-roboto mb-10 pb-3 pt-5 rounded-md shadow-md text-gray-800 lg:max-w-screen-xl lg:mx-auto lg:px- sm:px-5 overflow-x-hidden">
          <div class="swiper-wrapper flex">
            <% books.forEach(book => { %>
              <% if(book.genre_id == genre.id) { %>
                <div class="swiper-slide">
                  <a href="<%= "products/" + book.id %> ">
                    <div class="w-40 flex-none px-3">
                        <div class="mb-6 h-item">
                            <img src="<%= "/portadas/" + book.book_cover %>" alt="">
                        </div>
                        <div>
                            <p class="font-roboto text-gray-800 text-sm leading-tight"><%= book.title %> </p>
                        </div>
                        <div>
                          <span class="font-roboto text-gray-600 text-xs"><%= book.autors.name %> </span>
                      </div>
                    </div>
                  </a> 
                </div>
              <% } %>  
            <% }); %>
          </div> 
        </div>  
      <% }); %>
    </div> 
    <%- include('./partials/footer') %>
</body>
</html>